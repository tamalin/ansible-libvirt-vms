{#- Based upon ignition config generated by https://opensuse.github.io/fuel-ignition/edit -#}
{
  "ignition": {
    "version": "3.2.0"
  },
  "passwd": {
    "users": [
      {
        "name": "{{ _vm_user }}",
        "passwordHash": "{{ mgmt_password_hash }}",
        "sshAuthorizedKeys": {{ _vm_ssh_keys | to_json }}
      }
    ]
  },
  "storage": {
    "filesystems": [
      {
        "device": "/dev/disk/by-label/ROOT",
        "format": "btrfs",
        "mountOptions": [
          "subvol=/@/home"
        ],
        "path": "/home",
        "wipeFilesystem": false
      }
    ],
    "files": [
      {
        "path": "/etc/hostname",
        "mode": 420,
        "overwrite": true,
        "contents": {
          "source": "data:text/plain;charset=utf-8;base64,{{ libvirt_vm.name | b64encode }}"
        }
      },
      {
        "path": "/etc/sudoers.d/{{ _vm_user }}",
        "mode": 420,
        "overwrite": true,
        "contents": {
          "source": "data:text/plain;charset=utf-8;base64,{{ (_vm_user ~ ' ALL=(ALL:ALL) NOPASSWD:ALL') | b64encode }}"
        }
      }
    ]
  }
}
